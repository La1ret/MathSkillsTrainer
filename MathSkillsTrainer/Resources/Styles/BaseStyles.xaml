<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Самый общий стиль-->
    <Style TargetType="{x:Type Control}">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="BorderBrush" Value="DarkGray" />
                <Setter Property="Foreground" Value="#777777" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="True">
                <Setter Property="BorderBrush" Value="DimGray" />
                <Setter Property="Foreground" Value="#444444" />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="DimGray" />
                <Setter Property="Foreground" Value="#222222" />
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#444444" />
                <Setter Property="Foreground" Value="Black" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="25"/>
    </Style>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Azure"/>
        <Setter Property="Template" Value="{DynamicResource TransparentDisebledButtonCT}"/>
    </Style>

    <Style TargetType="{x:Type ToggleButton}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="2,0,0,0"/>
        <Setter Property="BorderBrush" Value="DarkGray"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
        <Setter Property="Template" Value="{DynamicResource ToggleButtonDisabledOpasityCT}"/>
    </Style>

    <!--Базовый стиль для TextBox и добавление к нему Plaseholder-->
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template" Value="{DynamicResource TextBoxWithPlaceholderCT}"/>
    </Style>

    <!--Базовый стиль для PswBox и добавление к нему Plaseholder-->
    <Style TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="FontSize" Value="23"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template" Value="{DynamicResource PswBoxWithPlaceholderCT}"/>
    </Style>

    <!--Переопределение Chk для корректного отображения текста-->
    <Style TargetType="{x:Type CheckBox}">
        <!--BasedOn="{StaticResource {x:Type TextBlock}}"-->
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="FontSize" Value="23"/>
        <Setter Property="Template" Value="{DynamicResource CheckBoxStandardTextSizeCT}"/>
    </Style>

</ResourceDictionary>