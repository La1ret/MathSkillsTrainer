<Page x:Class="MathSkillsTrainer.Views.Pages.AuthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:h="clr-namespace:MathSkillsTrainer.Helpers"
    xmlns:local="clr-namespace:MathSkillsTrainer.Views.Windows"
    mc:Ignorable="d"
    Title="Authorization" Height="550" Width="800"
    IsEnabled="{Binding WindowIsEnabled, UpdateSourceTrigger=PropertyChanged}"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" Text="Вход" Grid.Row="0" />

        <TextBlock Text="{Binding AuthStatusMessage}" Grid.Row="1" Style="{StaticResource AdditionalInfo}"/>

        <TextBox ToolTip="Пользователь"
                Grid.Row="2"
                Grid.ColumnSpan="2" 
                Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <!--Поля пароля-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <PasswordBox ToolTip="Пароль"
                        Grid.Column="0"
                        h:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding IsPasswordFieldsEnabled, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding IsPasswordBoxVisible}"/>

            <TextBox ToolTip="Пароль"
                    Grid.Column="0"
                    Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding IsPasswordFieldsEnabled}"
                    Visibility="{Binding IsPasswordTextBoxVisible}"/>

            <ToggleButton Grid.Column="1"
                        Command="{Binding ChangePasswordVisibility}"
                        CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}">
                <Image Source="{Binding VisibilityToggleImage}" />
            </ToggleButton>
        </Grid>
        
        <Grid Grid.Row="5" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox Content="Запомнить меня" Grid.Column="0"/>
            <Button Content="Забыли пароль?" 
                    Grid.Column="2"
                    Style="{StaticResource LinkButton}"
                    Command="{Binding ShowForgotPasswordCommand}"/>
        </Grid>

        <!--Кнопки-->
        <StackPanel Grid.Row="7" Margin="130,0">
            <Button Content="Войти" Margin="0,50,0,10" Command="{Binding SignInCommand}"/>
            <Button Content="Зарегистрироваться" Margin="0,10" Command="{Binding SignUpCommand}"/>
            <Button FontSize="10" Content="Войти как гость" Margin="0,10" Command="{Binding SignUpCommand}" Style="{StaticResource LinkButton}"/>
        </StackPanel>
    </Grid>
</Page>
