      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MathSkillsTrainer.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordRecovery">

    <Grid>
        <Button Content="←" Style="{StaticResource TransparentButton}" VerticalAlignment="Top" HorizontalAlignment="Center"  Command="{Binding BackCommand}"/>
        <TextBlock Text="Забыли пароль? А неча!" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Page>
