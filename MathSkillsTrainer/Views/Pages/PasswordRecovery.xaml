<Page x:Class="MathSkillsTrainer.Views.Pages.PasswordRecovery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MathSkillsTrainer.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="PasswordRecovery">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="1.1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        
        <Button Content="←" 
                Grid.Row="0" Grid.Column="0"
                Style="{StaticResource TransparentButton}" 
                Command="{Binding BackCommand}"/>
        
        <TextBlock Text="Восстановление пароля"
                   Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        
        <TextBlock Text="Для восстановления пароля и доступа к аккаунту введите Ваш логин и почту на которую зарегестрирован данный аккаунт." 
                   Grid.Row="1" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"/>
        
        <TextBox ToolTip="Имя пользователя (логин)" 
                 Grid.Row="2" Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="*" Foreground="red" Grid.Row="2" Grid.Column="3"/>

        <TextBox ToolTip="Почта"
                 Grid.Row="3" Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="*" Foreground="red" Grid.Row="3" Grid.Column="3"/>

        <TextBlock Text="{Binding RecoveryStatusMessage}" 
                   Style="{StaticResource AdditionalInfo}"
                   Grid.Row="4" Grid.Column="0"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"/>

        <Button Grid.Row="5" Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="130, 20"
                Content="Сбросить пароль" Command="{Binding RecoveryPasswordCommand}"/>
    </Grid>
</Page>
