<Page x:Class="MathSkillsTrainer.Views.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:h="clr-namespace:MathSkillsTrainer.Helpers"
      xmlns:local="clr-namespace:MathSkillsTrainer.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4.5*"/>
        </Grid.RowDefinitions>

        <Button Content="←" Grid.Column="0" Grid.Row="0" Style="{StaticResource TransparentButton}" Command="{Binding BackCommand}"/>
        <TextBlock HorizontalAlignment="Center" Text="Регистрация" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>
        
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Grid.ColumnSpan="3" 
                   Style="{StaticResource AdditionalInfo}"
                   Text="{Binding RegistrationStatusMessage, UpdateSourceTrigger=PropertyChanged}"/>

        <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBox ToolTip="ФИО" Grid.Row="0" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBox ToolTip="Электронная почта" Grid.Row="1" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBox ToolTip="Имя пользователя (логин)" Grid.Row="2" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

            <!--Поля пароля-->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <PasswordBox ToolTip="Пароль"
                             Grid.Column="0"
                             h:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding IsPasswordBoxVisible}"/>

                <TextBox ToolTip="Пароль"
                         Grid.Column="0"
                         Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                         Visibility="{Binding IsPasswordTextBoxVisible}"/>

                <ToggleButton Grid.Column="1"
                             Command="{Binding ChangePasswordVisibility}"
                             CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}">
                    <Image Source="{Binding VisibilityToggleImage}" />
                </ToggleButton>
            </Grid>
            
            <CheckBox Content="Согласен/а с пользовательским соглашением"
                      Grid.Row="5" Grid.Column="0"
                      Grid.ColumnSpan="2" 
                      IsChecked="{Binding FamiliarWithPolicy}"/>

            <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="center" Width="350">
                <Button Content="Зарегистрироваться" Command="{Binding SignUpCommand}"/>
            </StackPanel>
        </Grid>
        
        <TextBlock Text="*&#x0a;*&#x0a;*&#x0a;*" 
                   LineHeight="65" 
                   LineStackingStrategy="BlockLineHeight"
                   Margin="0, -30"
                   Foreground="Red"
                   Grid.Column="3" Grid.Row="2"/>
    </Grid>
</Page>
